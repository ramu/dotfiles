# set - show
set main-view = line-number:true,interval=1 date:relative author:abbreviated id commit-title:true,graph=true,refs=true

# set - etc
set horizontal-scroll    = 33%
set split-view-height    = 70%
set line-graphics        = ascii
set tab-size             = 4

# color
color cursor white black

# bind
bind generic g move-first-line
bind generic G move-last-line
bind generic r refresh

