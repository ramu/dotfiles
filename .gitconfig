[user]
    name  = ramusara
    email = ramusara@gmail.com

[color]
    branch      = auto
    diff        = auto
    interactive = auto
    status      = auto
    ui          = auto

[push]
    default = tracking

[core]
    editor   = /usr/bin/vim
    autocrlf = input

[merge]
    keepBackup = false
    tool       = ./scripts/p4merge.sh

[mergetool "p4merge"]
    cmd             = ./scripts/p4merge.sh "$BASE" "$LOCAL" "$REMOTE" "$MERGED"
    keepTemporaries = false
    trustExitCode   = false
    keeBackup       = false

[diff]
    external = ./scripts/p4diff.sh

