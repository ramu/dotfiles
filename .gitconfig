[user]
    name  = ramusara
    email = ramusara@gmail.com

[color]
    branch      = auto
    diff        = auto
    interactive = auto
    status      = auto
    ui          = auto

[push]
    default = tracking

[core]
    pager     = less
    editor    = /usr/bin/vim
    autocrlf  = input
    quotepath = false

[merge]
    keepBackup = false
    tool       = ~/dotfiles/scripts/p4merge.sh

[mergetool "p4merge"]
    cmd             = ~/dotfiles/scripts/p4merge.sh "$BASE" "$LOCAL" "$REMOTE" "$MERGED"
    keepTemporaries = false
    trustExitCode   = false
    keeBackup       = false

[diff]
    external = ~/dotfiles/scripts/p4diff.sh

