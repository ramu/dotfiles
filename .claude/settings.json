{
  "enableAllProjectMcpServers": false,
  "env": {
    "CLAUDE_BASH_MAINTAIN_PROJECT_WORKING_DIR": "true"
  },
  "hooks": {
    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "osascript -e 'display notification \"タスクが完了しました\" with title \"'$(basename \"$PWD\")'\"'"
          }
        ]
      }
    ]
  },
  "model": "opus",
  "permissions": {
    "allow": [
      "Bash(find:*)",
      "Bash(git status:*)",
      "Bash(git diff:*)",
      "Bash(git log:*)",
      "Bash(git add:*)",
      "Bash(git commit:*)",
      "Bash(ls:*)",
      "Bash(npm:*)",
      "Bash(osascript -e:*)",
      "Bash(pnpm:*)",
      "Bash(yarn:*)",
      "Read(./**)"
    ],
    "deny": [
      "Bash(curl:*)",
      "Bash(git branch:*)",
      "Bash(git rebase:*)",
      "Bash(git reset:*)",
      "Bash(git switch:*)",
      "Bash(nc:*)",
      "Bash(rm:*)",
      "Bash(rm -rf:*)",
      "Bash(rsync:*)",
      "Bash(scp:*)",
      "Bash(ssh:*)",
      "Bash(sudo:*)",
      "Bash(wget:*)",
      "Read(.env)",
      "Read(.envrc)",
      "Read(.env.*)",
      "Read(~/.aws/*)",
      "Read(~/.config/gcloud/*)",
      "Read(~/.kube/*)",
      "Read(~/.ssh/*)",
      "Write(~/.ssh/*)"
    ]
  },
  "preferredNotifChannel": "iterm2"
}

