{
  "enableAllProjectMcpServers": false,
  "env": {
    "CLAUDE_BASH_MAINTAIN_PROJECT_WORKING_DIR": "true",
    "BASH_DEFAULT_TIMEOUT_MS": "300000",
    "BASH_MAX_TIMEOUT_MS": "1200000"
  },
  "hooks": {
    "Notification": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "osascript -e 'display notification \"Claude Codeが許可を求めています\" with title \"Claude Code\" sound name \"Glass\"'"
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/scripts/deny-check.sh"
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "osascript -e 'display notification \"タスクが完了しました\" with title \"'$(basename \"$PWD\")'\" sound name \"Glass\"'"
          }
        ]
      }
    ]
  },
  "model": "opus",
  "permissions": {
    "allow": [
      "Bash(awk:*)",
      "Bash(bundle exec:*)",
      "Bash(find:*)",
      "Bash(gh issue comment:*)",
      "Bash(gh issue view:*)",
      "Bash(gh issue list:*)",
      "Bash(gh pr create:*)",
      "Bash(gh pr view:*)",
      "Bash(gh pr list:*)",
      "Bash(git checkout -b:*)",
      "Bash(git status:*)",
      "Bash(git diff:*)",
      "Bash(git log:*)",
      "Bash(git add:*)",
      "Bash(git commit:*)",
      "Bash(grep:*)",
      "Bash(head:*)",
      "Bash(jq:*)",
      "Bash(ls:*)",
      "Bash(npm:*)",
      "Bash(osascript -e:*)",
      "Bash(pnpm:*)",
      "Bash(yarn:*)",
      "Edit(./**)",
      "Read(./**)"
    ],
    "deny": [
      "Bash(brew install:*)",
      "Bash(chmod 777:*)",
      "Bash(curl:*)",
      "Bash(gh repo delete:*)",
      "Bash(git branch:*)",
      "Bash(git config:*)",
      "Bash(git rebase:*)",
      "Bash(git reset:*)",
      "Bash(git switch:*)",
      "Bash(nc:*)",
      "Bash(rm:*)",
      "Bash(rm -rf:*)",
      "Bash(rsync:*)",
      "Bash(scp:*)",
      "Bash(ssh:*)",
      "Bash(sudo:*)",
      "Bash(wget:*)",
      "Edit(.env)",
      "Edit(.envrc)",
      "Edit(.env.*)",
      "Edit(~/.aws/*)",
      "Edit(~/.config/gcloud/*)",
      "Edit(~/.kube/*)",
      "Edit(~/.ssh/*)",
      "Read(.env)",
      "Read(.envrc)",
      "Read(.env.*)",
      "Read(~/.aws/*)",
      "Read(~/.config/gcloud/*)",
      "Read(~/.kube/*)",
      "Read(~/.ssh/*)",
      "Write(.env)",
      "Write(.envrc)",
      "Write(.env.*)",
      "Write(~/.aws/*)",
      "Write(~/.config/gcloud/*)",
      "Write(~/.kube/*)",
      "Write(~/.ssh/*)"
    ]
  },
  "preferredNotifChannel": "iterm2"
}

